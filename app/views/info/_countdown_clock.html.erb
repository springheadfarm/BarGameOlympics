<div class="wrapper">

    <div class="panel panel-default countdown_clock">

        <div class="panel-heading">
            <h1>Countdown to BGO <%= image_tag '8ball.png' %></h1>
        </div>

        <div class="panel-body">

            <div class="clock">

                <div class="clock_days">
                    <div class="bgLayer">
                        <div class="topLayer"></div>
                        <canvas id="canvas_days" width="188" height="188"></canvas>
                        <div class="text">
                            <p class="val">0</p>
                            <p class="type_days">Days</p>
                        </div>
                    </div>
                </div>

                <div class="clock_hours">
                    <div class="bgLayer">
                        <div class="topLayer"></div>
                        <canvas id="canvas_hours" width="188" height="188"></canvas>
                        <div class="text">
                            <p class="val">0</p>
                            <p class="type_hours">Hours</p>
                        </div>
                    </div>
                </div>

                <div class="clock_minutes">
                    <div class="bgLayer">
                        <div class="topLayer"></div>
                        <canvas id="canvas_minutes" width="188" height="188"></canvas>
                        <div class="text">
                            <p class="val">0</p>
                            <p class="type_minutes">Minutes</p>
                        </div>
                    </div>
                </div>

                <div class="clock_seconds">
                    <div class="bgLayer">
                        <div class="topLayer"></div>
                        <canvas id="canvas_seconds" width="188" height="188"></canvas>
                        <div class="text">
                            <p class="val">0</p>
                            <p class="type_seconds">Seconds</p>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>

</div><!--/wrapper-->
