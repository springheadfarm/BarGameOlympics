<%= javascript_include_tag 'jbclock' %>

        <script type="text/javascript">
            $(document).ready(function(){
                JBCountDown({
                    secondsColor : "#ffdc50",
                    secondsGlow  : "none",
                    
                    minutesColor : "#9cdb7d",
                    minutesGlow  : "none",
                    
                    hoursColor   : "#378cff",
                    hoursGlow    : "none",
                    
                    daysColor    : "#ff6565",
                    daysGlow     : "none",
                    
                    startDate   : Date.parse("16/Feb/2013 23:00:00")/1000,
                    endDate     : Date.parse("14/Feb/2014 18:00:00")/1000,
                    now         : (new Date) / 1000
                });
            });
        </script>

