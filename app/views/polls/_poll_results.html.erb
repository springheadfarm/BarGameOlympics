
<table class="table table-striped table-condensed">
	<thead>
		<tr>
			<th>Reponse</th>
			<th>Votes</th>
			<th>%</th>
		</tr>
	</thead>
	<% @poll.poll_answers.order("votes DESC").each do |pa| %>

		<tr>
			<td><%= pa.answer %></td>
			<td><%= pa.votes %></td>
			<td><%= pa.percent %></td>
		</tr>

	<% end %>
</table>

