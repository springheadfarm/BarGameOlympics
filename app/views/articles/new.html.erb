<% title "New Article" %>

<%= form_for @article do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :author %><br />
    <%= f.text_field :author %>
  </p>
  <p>
    <%= f.label :markdown %><br />
    <%= f.text_area :markdown %>
  </p>
  <p>
    <%= f.label :written_at %><br />
    <%= f.datetime_select :written_at %>
  </p>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p><%= f.submit %></p>
<% end %>


<p><%= link_to "Back to List", articles_path %></p>
