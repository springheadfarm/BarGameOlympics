<!DOCTYPE html>
<html>
	<head>
		<title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title>
		<%= stylesheet_link_tag    "application", :media => "all" %>
		<%= javascript_include_tag "application" %>
		<%= csrf_meta_tag %>
		<%= yield(:head) %>
		<script>
		    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
		    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
		    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
		    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

		    ga('create', 'UA-1627599-1', 'auto');
		    ga('send', 'pageview');

		  </script>
		</head>
	<body>

		<!-- Fixed navbar -->
		<div class="navbar navbar-default navbar-fixed-top">
			<div class="container">
				<div class="navbar-header">
					<%= link_to "BGO", root_url, :class => "navbar-brand" %>
				</div>
				<div class="navbar-collapse collapse">
					<ul class="nav navbar-nav">

						<%= athlete_menu %>

						<li class="dropdown"><a class="dropdown-toggle" data-toggle="dropdown" href="#">Stats/Results<b class="caret"></b></a>
							<ul class="dropdown-menu">
								<li><%= link_to "Medals", stats_medals_path %></li>
								<li><%= link_to "Medal Heatmap", stats_medals_heatmap_path %></li>
							</ul>
						</li>

						<li class="dropdown"><a class="dropdown-toggle" data-toggle="dropdown" href="#">Rules<b class="caret"></b></a>
							<ul class="dropdown-menu">
								<li><%= link_to "Darts", rules_darts_path %></li>
								<li><%= link_to "Foosball", rules_foosball_path %></li>
								<li><%= link_to "Golden Tee", rules_golden_tee_path %></li>
								<li><%= link_to "Ping Pong", rules_ping_pong_path %></li>
								<li><%= link_to "Pool", rules_pool_path %></li>
								<li><%= link_to "Shuffleboard", rules_shuffleboard_path %></li>
							</ul>
						</li>

						<!-- For now these items are hidden in production -->

						<% if Rails.env.development? then %>

							<li><a href="#">Store</a></li>
						<% end %>

						<%= navbar_link "Photos", galleries_path %>
						<%= navbar_link "Tickets", tickets_path %>

						<% if Rails.env.development? then %>

							<li><a href="#">Community</a></li>
							<li><a href="#">More</a></li>

						<% end %>

					</ul>

					<% if Rails.env.development? then %>
						<ul class="nav navbar-nav navbar-right">
							<li class="active"><a href="./">Login or Sign Up</a></li>
						</ul>
					<% end %>

				</div><!--/.nav-collapse -->
			</div>
		</div>

		<div class="container">

			<%= yield %>

		</div>

		<br/>

		<div class="container">
			<div class="row">
				<div class='col-md-12'>
				<center>
						<script type="text/javascript"><!--
							google_ad_client = "ca-pub-2802714891836755";
							/* BGO Footer */
							google_ad_slot = "5993507461";
							google_ad_width = 728;
							google_ad_height = 90;
							//-->
						</script>
						<script type="text/javascript"
							src="http://pagead2.googlesyndication.com/pagead/show_ads.js">
						</script>
				</center>
				</div>
			</div>

		</div>

	</body>
</html>
