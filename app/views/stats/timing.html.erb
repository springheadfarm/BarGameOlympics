<div class="row">

	<div class="col-md-6">

		<h5>Average Match Length by Sport</h5>
		<table class="table table-striped table-condensed">

			<thead>
				<tr>
					<th>Sport</th>
					<th>Average Length</th>
				</tr>
			</thead>

			<tbody>
				<% @elapsed_by_sport.each do |r| %>

					<tr>
						<td><%= Sport.find(r.sport_id).name %></td>
						<td><%= r.elapsed %></td>
					</tr>

				<% end %>
			</tbody>

		</table>

	</div>

	<div class="col-md-6">

		<h5>Average Match Length by Athlete</h5>
		<table class="table table-striped table-condensed">

			<thead>
				<tr>
					<th>Athlete</th>
					<th>Average Length</th>
				</tr>
			</thead>

			<tbody>
				<% @elapsed_by_athlete.each do |r| %>

					<tr>
						<td><%= Athlete.find(r.athlete_id).full_name %></td>
						<td><%= r.elapsed %></td>
					</tr>

				<% end %>
			</tbody>

		</table>

	</div>

</div>